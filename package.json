{
  "name": "choralith-audio-explorer",
  "productName": "Choralith Audio Explorer",
  "version": "1.0.0",
  "main": "electron/main.js",
  "author": "Stefano Mercadante <stefmercadante@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "electron:build": "npm run build && electron-builder",
    "start": "electron ."
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "vite": "^5.0.0",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "music-metadata": "^7.14.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "build": {
    "appId": "com.stesproject.choralith_audio_explorer",
    "productName": "Choralith Audio Explorer",
    "files": [
      "dist",
      "electron"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "asar": true,
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "category": "AudioVideo"
    }
  }
}
